{
  "name": "ridewithme",
  "version": "1.0.0",
  "description": "bike taxi booking web applications",
  "type": "module",
  "main": "app.js",
  "scripts": {
    "start": " tsc-watch --onSuccess \"npm run watch\"",
    "deploy": "pm2 start ecosystem.config.cjs --env production",
    "watch": "nodemon --watch './**/*.{ts}' --exec node --experimental-specifier-resolution=node --loader ts-node/esm src/app.ts",
    "build": "tsc",
    "prod": "tsc && node --es-module-specifier-resolution=node dist/app.js"
  },
  "author": "7Span Interns",
  "license": "ISC",
  "dependencies": {
    "@types/winston": "^2.4.4",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.1",
    "joi": "^17.12.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.2.2",
    "multer": "^1.4.5-lts.1",
    "pre-commit": "^1.2.2",
    "twilio": "^5.0.2",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/express-fileupload": "^1.5.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^20.11.30",
    "nodemon": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.4.3"
  }
}
